<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.xshengh.newband.alarm.AlarmActivity">

    <ListView
        android:id="@+id/device_list"
        android:layout_width="wrap_content"
        android:layout_height="200dp" />

    <Button
        android:id="@+id/scan_btn_start"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="扫描设备"/>
    <EditText
        android:layout_marginLeft="10dp"
        android:id="@+id/device_et"
        android:hint="设备地址"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <EditText
        android:layout_marginLeft="10dp"
        android:id="@+id/alarm_hour"
        android:hint="闹钟小时(0-23)"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <EditText
        android:layout_marginLeft="10dp"
        android:id="@+id/alarm_minute"
        android:hint="闹钟分钟(0-60)"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <Button
        android:id="@+id/set_alarm"
        android:text="设置闹钟"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <Button
        android:id="@+id/cancel_alarm"
        android:text="取消闹钟"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
</LinearLayout>
